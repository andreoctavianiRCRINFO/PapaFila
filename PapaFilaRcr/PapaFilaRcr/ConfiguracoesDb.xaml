<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PapaFilaRcr.ConfiguracoesDb"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <Label 
                Text="Informe as configurações para conexão com o banco de dados"
                HorizontalOptions="CenterAndExpand"
                FontSize="Large" 
                FontAttributes="Bold" />
            <Entry Placeholder="IP Servidor" MaxLength="15" x:Name="ip" Completed="Ip_Completed" />
            <Entry Placeholder="Porta" MaxLength="8" x:Name="porta" Keyboard="Numeric" Completed="Porta_Completed"  />
            <Entry Placeholder="Nome do banco" MaxLength="20" x:Name="nomebanco" Completed="Nomebanco_Completed" />
            <Entry Placeholder="Usuário" MaxLength="20" x:Name="usuario" Completed="Usuario_Completed" />
            <Entry Placeholder="Senha" MaxLength="20" x:Name="senha" IsPassword="True" Completed="Senha_Completed"  />
            <Entry Placeholder="Id dispositivo" IsEnabled="False" x:Name="dispositivo"  />
            <Button Text="Salvar configurações" IsEnabled="False" x:Name="salvar" Clicked="Salvar_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>